@model MyE.Web.Models.Home.LoginModel
@{
    Layout = null;

    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/img/favicon.png">
    <title>Login - DAMER Admin</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/css/style.css" rel="stylesheet" />
    <!-- You can change the theme colors from here -->
    <link href="~/css/blue.css" id="theme" rel="stylesheet" />
  
</head>

<body>
    <div class="preloader">
        <svg class="circular" viewBox="25 25 50 50">
            <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
        </svg>
    </div>
   
    <div class="row justify-content-center" style="height:100vh;">
        <div class="col-12 col-md-6" style="background-color: #FF535A;">
            <div class="row justify-content-center align-content-center" style="height:100%">
                <div class="col-10 text-center my-2">
                    <img src="~/img/AAAAA.png" class="d-md-inline d-none" style="width: 343px; height:100px;" />

                </div>
            </div>
        </div>
        <div class="col-10 col-md-6 login-register" style="">
            <div class="text-center">
                <p class="font-italic">Bienvenido a Clenic</p>
            </div>
            <div class="login-box card">
                <div class="card-body" style="background-color: #fcfafa">
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal form-material validate ajax-post", id = "loginform" }))
                    {
                        @Html.AntiForgeryToken()

                        <h3 class="box-title m-b-20 text-center">Iniciar sesión</h3>
                        <div class="form-group ">
                            @Html.LabelFor(x => x.Usuario)
                            <div class="col-xs-12">
                                @Html.TextBoxFor(x => x.Usuario, new { @class = "form-control", maxlength = "50", required = "required" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Clave)
                            <div class="col-xs-12">
                                @Html.TextBoxFor(x => x.Clave, new { @class = "form-control", maxlength = "50", type = "password", required = "required" })
                            </div>
                        </div>
                        <div class="form-group text-center m-t-20">
                            <div class="col-xs-12">
                                <button class="btn btn-lg btn-block text-uppercase waves-effect waves-light" type="submit" style="background-color: #FF535A; color:white">Entrar</button>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
    
    <script src="~/js/jquery-3.5.1.js"></script>

    <script src="~/plugins/bootstrap/js/popper.min.js"></script>
    <script src="~/plugins/bootstrap/js/bootstrap.min.js"></script>

    <script src="~/js/jquery.slimscroll.js"></script>

    <script src="~/js/waves.js"></script>

    <script src="~/js/sidebarmenu.js"></script>

    <script src="~/plugins/sticky-kit/sticky-kit.min.js"></script>
    <script src="~/plugins/sparkline/jquery.sparkline.min.js"></script>

    <script src="~/js/custom.min.js"></script>

    <script src="~/plugins/styleswitcher/jQuery.style.switcher.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script>
        function swalShowLoading() { Swal.showLoading(); }
        function swalShowError() {
            Swal.fire({
                icon: 'error',
                title: '¡Error!',
                text: 'Ocurrió un error desconocido.'
            });
        }
    </script>

    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/plugins/jquery-validation/additional-methods.js"></script>
    <script src="~/plugins/jquery-validation/localization/messages_es_PE.js"></script>
    <script>
        function initValidator(e) {
            $(e).validate({
                errorClass: 'text-danger',
                errorElement: 'small',
                errorPlacement: function (error, element) {
                    error.insertAfter(element);
                }
            });
        }
        $(document).ready(function () { $('.validate').each(function (i, e) { initValidator(e); }); });
    </script>

    <script>
        $('.ajax-post').on('submit', function (e) {
            e.preventDefault();
            if ($(this).valid()) {
                $.ajax({
                    url: $(this).prop('action'),
                    type: $(this).prop('method'),
                    processData: false,
                    contentType: false,
                    data: new FormData($(this)[0]),
                    beforeSend: function () { swalShowLoading(); allowOutsideClick: false},
                    error: function () { swalShowError(); },
                    success: function (data) {
                        if (data.icon !== 'error') {
                            location.href = '@Url.Action("Index", "Home")';
                        }

                        else {
                            Swal.fire({
                                icon: data.icon,
                                title: data.title,
                                text: data.text,
                                allowOutsideClick: false,
                                allowEscapeKey: false
                            })
                        }

                    }
                });
            }
        });
    </script>
</body>
</html>

